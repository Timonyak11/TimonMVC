<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Registration</title>
        <script src="/js/script.js"></script>
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <form action="login" method="POST">
            <h1>Login</h1>
            <label>Email Address: <input type="text" name="email"></label>
            <label>Password: <input type="password" name="password"></label>
            <input id="login" type="submit" value="Login">
        </form>
<%  if(errors) { 
        for(let i = 0; i < errors.length; i++){
%>
        <p class="errors"><%= errors[i] %></p>
<%  
        }
    }  
    if(success){
%>
        <p class="success"><%= success %></p>
<%
    }
%>
        <form action="/register" method="POST">
            <h1>Register</h1>
            <label>First Name: <input type="text" name="firstName" value= <%= regData == undefined?'':regData.firstName %> ></label>
            <label>Last Name: <input type="text" name="lastName" value=<%= regData == undefined?'':regData.lastName %>></label>
            <label>Email Address: <input type="text" name="email" value=<%= regData == undefined?'':regData.email %>></label>
            <label>Password: <input type="password" name="password"></label>
            <label>Confirm Password: <input type="password" name="confirmPassword"></label>
            <input id="register" type="submit" value="Register">    
        </form>
        <%- renderProfiler %>
    </body>
</html>